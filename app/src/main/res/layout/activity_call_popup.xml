<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:background="@drawable/gray_boader_shadow_box"
    tools:context=".CallPopupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/txtvPopupPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="010-1234-5678"
            android:textStyle="bold"
            android:textColor="@color/black_dark"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/txtvPopupShopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저장된 내역"
            android:textColor="#019eef"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textSize="12sp"/>

        <LinearLayout
            android:id="@+id/layoutPopupCount"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtvPopupCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00명"
                android:textColor="#999999"
                android:textSize="11sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 저장"
                android:textColor="#999999"
                android:textSize="11sp"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>